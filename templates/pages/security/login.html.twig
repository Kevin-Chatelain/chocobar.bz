{% extends 'base.html.twig' %}

{% block title %}Chocobar.bz - Connexion{% endblock %}

{% block body %}

    {% block header %}{% endblock %}

    <h1>Connectez-vous !</h1>

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    

    <form action="{{ path('security.login') }}" method="post">
        <label>Adresse E-mail</label>
        <input type="email" name="_username" placeholder="example@website.com" value={{last_username}}>

        <label>Mot de passe</label>
        <input type="password" name="_password" placeholder="******">

        <button type="submit">Se connecter</button>
    </form>

{% endblock %}
